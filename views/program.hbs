<div class="row">
    <div class="col-md-12">
        <h2>{{program.programName}} - Program Code: {{program.programCode}}</h2>
        <hr />
        <form method="POST" action="/program/update">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="programCode">Program Code</label>
                        <input class="form-control" type="text" id="programCode" name="programCode" value="{{program.programCode}}">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="programName">Program Name</label>
                        <input class="form-control" type="text" id="programName" name="programName"
                            value="{{program.programName}}">
                    </div>
                </div>
            </div>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Program" /><br /><br /><br />
        </form>
    </div>
</div>